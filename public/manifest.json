{
  "manifest_version": 3,
  "name": "WatchRaptor",
  "version": "0.9.0",

  "description": "Notify if a specified status check of GitHub PRs is completed",
  "author": "FUJI Goro",

  "icons": {
    "48": "./assets/velociraptor48.png",
    "128": "./assets/velociraptor128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "host_permissions": [
    "https://github.com/"
  ],
  "permissions": [
    "scripting",
    "alarms",
    "storage",
    "webNavigation",
    "notifications"
  ]
}
